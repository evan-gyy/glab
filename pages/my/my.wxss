/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
	color: #aaa;
	margin: 80rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}

.title {
	color: rgb(87, 86, 86);
	font-weight: bold;
	font-size: 35rpx;
	margin-top: 20rpx;
}

.avatar {
	opacity: 0.7;

}

.usermotto {
	margin-top: 50rpx;
}

.line {
	background: #e5e5e5;
	opacity: 0.8;
	height: 1rpx;
}

.name {
	color: rgb(63, 63, 63);
}

.row {
	display: flex;
	flex-direction: row;
	font-weight: bold;
	font-size: 35rpx;
	justify-content: space-between;
	align-items: center;
	padding: 35rpx 50rpx;
	background-color: #fff;
}

.row image {
	height: 35rpx;
	width: 35rpx;
}