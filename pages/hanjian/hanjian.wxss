page {
  background: #eeeeee;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
	margin: 20rpx 50rpx;
	padding: 20rpx 20rpx;
	border-radius: 15rpx;
	/* background-color: rgb(178,180,210); */
}

.avatar {
  overflow: hidden;
  width: 128rpx;
	height: 128rpx;
	border-radius: 50%;
}

.bottom {
	position: fixed;
	bottom: 30rpx;
	z-index: 100;
	width: 100%;
}

.bottom-btn {
	height: 80rpx;
	width: 200rpx;
	font-size: 35rpx;
	border-radius: 40rpx;
}

.title {
	color: rgb(37, 37, 37);
	margin-top: 15rpx;
	font-size: 33rpx;
}

.subtitle {
	color: rgb(43, 42, 42);
	padding: 15rpx;
	font-weight: bold;
	font-size: 35rpx;
}

.line {
	background: #E0E3DA;
	width: 100%;
	height: 3rpx;
	margin-left: 20rpx;
	padding-right: 20rpx;
}

.card-list {
	display: flex;
	flex-direction: column;
	/* align-items: center; */
}

.card {
	background-color: #d0d1e2;
	margin: 0rpx 30rpx 20rpx;
	padding: 10rpx;
	border-radius: 15rpx;
}

.button-list {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}

button {
	display: flex;
	justify-content: center;
	align-items: center;
}

.blank {
	margin: 60rpx;
}